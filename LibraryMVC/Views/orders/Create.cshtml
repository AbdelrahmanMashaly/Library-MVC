@model LibraryMVC.Models.Book

@{
    ViewData["Title"] = "Create";
}
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<h4>orders</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.BookId)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.BookId)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.price)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.price)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Quantity)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Quantity)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Title)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Title)
    </dd>
  
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Author)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Author)
    </dd>
    <dt>
        Pic
    </dt>
    <dd>
        <img src="~/images/@Model.imgfile" height="150" />
        <br />@Model.imgfile

    </dd>
</dl>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="bookId" value=@Model.BookId />
            <div class="form-group">
                <label for="quantity" class="control-label">Quantity</label>
                <input name="quantity" class="form-control" />

            </div>
            <input type="submit" value="Buy" class="btn btn-primary" />

        </form>
    </div>
</div>

<div>
    <a asp-controller="Books" asp-action="catalogue">Back to Catalogue</a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
